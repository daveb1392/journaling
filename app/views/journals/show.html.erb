
<% if @journal.user == current_user %>
<h1 align="center"><%= @journal.title %></h1>
<div class="well col-xs-8 col-xs-offset-2">
<ul class="listing">
<div class="row" align="center">
<li class="article-title"><%= link_to @journal.user.username, user_path(@journal.user) %></li>

</div>
</ul>
    <%= simple_format(@journal.title) %>
    <div class="journal-actions">
    <%= link_to 'Edit', edit_journal_path(@journal), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete", journal_path(@journal), method: :delete, data: { confirm: "Are you sure you want to delete this entry?"}, class: "btn btn-xs btn-danger" %> 
    <%= link_to 'Back', journals_path, class: "btn btn-xs btn-success" %>
    </div>
    </div>
<% end %>
